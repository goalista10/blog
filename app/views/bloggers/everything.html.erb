<h1>Bloggers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_bloggers.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.level %></td>
        <td><%= user.comments.count %></td>
        <td><%= link_to 'Comments', blogger_comment_page_path(user) %></td>
        <td><%= link_to 'Edit', edit_path(user) %></td>
        <td><%= link_to 'Destroy', bloggers_everything_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Add Blogger</h1>
<%= form_with scope: :blogger, url: bloggers_everything_path do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <%= form.number_field  :level %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

