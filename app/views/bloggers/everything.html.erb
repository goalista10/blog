<h1>Bloggers</h1>
<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_bloggers.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.level %></td>
        <td><%= user.comments.count %></td>
        <td><%= link_to 'Comments', blogger_comment_page_path(user),class:"btn btn-success btn-sm" %></td>
        <td><%= link_to 'Edit', edit_path(user),class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', bloggers_everything_path(user.id), method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1>Add Blogger</h1>
<%= form_with scope: :blogger, url: bloggers_everything_path do |form| %>
  <div class="mb-3">
    <%= form.label :name ,class:"form-label"%>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :level ,class:"form-label" %>
    <%= form.number_field  :level, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

